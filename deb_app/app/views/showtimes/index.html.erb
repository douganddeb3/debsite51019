<div style="min-height: 500px;">
<p id="notice"><%= notice %></p>

<h1>Showtimes</h1>

<table border="2px" class="table-condensed">
  <thead>
    <tr>
      <th>Org</th>
      <th>Town</th>
      <th>Street</th>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Month</th>
      <th>Day</th>
      <th>Time</th>
      <th>Pic</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @showtimes.each do |showtime| %>
      <tr>
        <td><%= showtime.org %></td>
        <td><%= showtime.town %></td>
        <td><%= showtime.street %></td>
        <td><%= showtime.name %></td>
        <td><%= showtime.email %></td>
        <td><%= showtime.phone %></td>
        <td><%= showtime.month %></td>
        <td><%= showtime.show_datetime.strftime("%d") %></td>
        <td><%= showtime.show_datetime.strftime("%H") %>:<%= showtime.show_datetime.strftime("%M") %></td>
        <td><%= showtime.pic %></td>
        <td><%= showtime.content %></td>
        <% if current_user %>
        <td><%= link_to 'Show', showtime %></td>
        <td><%= link_to 'Edit', edit_showtime_path(showtime) %></td>
        <td><%= link_to 'Destroy', showtime, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div>
<%= link_to 'New Showtime', new_showtime_path %>
</div>
</div>